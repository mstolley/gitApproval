{
  "manifest_version": 2,
  "name": "Git Approval",
  "description": "This chrome extension shows how many approvals (thumbs ups) a PR has within github",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pulls",
        "https://github.com/*/pulls?*",
        "https://github.com/pulls?*"
      ],
      "js": ["findThumbs.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://github.com/*",
    "tabs",
    "webNavigation",
    "storage"
  ]
}
